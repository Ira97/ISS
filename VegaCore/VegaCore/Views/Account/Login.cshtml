@model Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Вход в систему";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-inner col-10 col-lg-4 p-4 p-lg-5">
    @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, true, new { role = "form", id = "form-login" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Email", type = "email" })
        </div>
        <div class="form-group">
            <label>Пароль</label>
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Пароль", @type = "password" })
        </div>

        <button type="submit" class="btn btn-primary">Войти</button>
        <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("Register", "Account")'">Зарегистрироваться</button>
    }
</div>
