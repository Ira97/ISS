@model             Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-inner col-10 col-lg-4 p-4 p-lg-5">
    @using (Html.BeginForm("Register", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, true, new { role = "form", id = "form-login" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
        <div class="form-group">
            <label>Логин</label>
            @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @placeholder = "Логин" })
        </div>
        <div class="form-group">
            <label>Фио</label>
            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = "Фио" })
        </div>
        <div class="form-group">
            <label>Контакт</label>
            @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", @placeholder = "Контакт" })
        </div>
        <div class="form-group">
            <label>Пароль</label>
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Пароль", @type = "password" })
        </div>

        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("Login", "Account")'">Войти</button>
    }
</div>